<?xml version="1.0" encoding="UTF-8"?>
<project name="wonderland-whiteboard-module" default="dist" basedir=".">
    <!-- current directory needed in all scripts -->
    <dirname property="current.dir" file="${ant.file.wonderland-whiteboard-module}"/>
    <property file="${current.dir}/my.module.properties"/>

    <property name="modules.dir" location="${wonderland.dir}/modules"/>

    <property name="module.src" value="${module.plugin.src}"/>
    <property name="module.jarname" value="${module.name}"/>

    <!-- import common build file -->
    <import file="${modules.dir}/build-tools/build-scripts/module-build.xml"/>
       
    <pathconvert property="module-client.classpath">
        <path location="${current.dir}/../appbase/build/client/appbase-client.jar"/>
        <path location="${current.dir}/lib/batik-all.jar"/>
        <path location="${current.dir}/lib/xml-apis-ext.jar"/>
    </pathconvert>

    <pathconvert property="module-common.classpath">
        <path location="${current.dir}/../appbase/build/client/appbase-client.jar"/>
        <path location="${current.dir}/lib/batik-all.jar"/>
    </pathconvert>

    <pathconvert property="module-server.classpath">
        <path location="${current.dir}/../appbase/build/server/appbase-server.jar"/>
        <path location="${current.dir}/lib/batik-all.jar"/>
    </pathconvert>

    <target name="build" depends="-module-init, -module-compile-common,
                                                -module-compile-server,
                                                -module-compile-client"/>
    <target name="dist" depends="build">
        <mkdir dir="${module.dist.dir}"/>
        
        <module name="${module.name}" majorVersion="1" minorVersion="0" jarfile="${module.dist.dir}/${module.name}.jar"
 	                moduleDescription="${module.description}" builddir="${build.dir}">
            
            <client dir="${current.dir}/lib">
                <include name="*.jar"/>

                <clientjar name="whiteboard-client" basedir="${build.classes.dir}">
                    <cellfactory>
                        <provider classname="org.jdesktop.wonderland.modules.whiteboard.client.WhiteboardCellFactory"/>
                    </cellfactory>
                    <include name="${module.src}/client/**"/>
                    <fileset dir="${current.dir}/src/classes">
                        <include name="${module.src}/client/resources/**/*.png"/>
                    </fileset>
                    <include name="${module.src}/common/**"/>
                </clientjar>
            </client>

            <server dir="${current.dir}/lib">
                <include name="*.jar"/>

                <serverjar name="whiteboard-server" basedir="${build.classes.dir}">
                    <cellsetup>
                        <provider classname="org.jdesktop.wonderland.modules.whiteboard.common.WhiteboardSVGCellServerState"/>
                    </cellsetup>

                    <include name="${module.src}/server/**"/>
                    <include name="${module.src}/common/**"/>
                </serverjar>
            </server>
            
            <art dir="${current.dir}/art"/>
        </module>
    </target>
                                           
    <target name="deploy" depends="dist, -module-deploy"/>
    <target name="clean" depends="-module-clean"/>
</project>
